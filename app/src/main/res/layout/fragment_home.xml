<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints"
        android:orientation="vertical">

        <Button
            android:id="@+id/exam"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:text="검색 "
            tools:ignore="MissingConstraints" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="83dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.484">

            <Button
                android:id="@+id/suggest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/button_color"
                android:text="추천"
                android:textColor="#020202" />

            <Button
                android:id="@+id/theme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/button_color"
                android:text="테마"
                android:textColor="#020202" />

            <Button
                android:id="@+id/festa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/button_color"
                android:text="축제"
                android:textColor="#020202" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Cname1"
            app:layout_constraintVertical_bias="0.968">

            <Button
                android:id="@+id/btn_spring"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginRight="15sp"
                android:drawableTop="@drawable/btn_spring"
                android:scaleType="centerInside"
                android:text=" 봄 "
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_summer"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginLeft="15sp"
                android:drawableTop="@drawable/btn_summer"
                android:scaleType="centerInside"
                android:text=" 여름 "
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="4dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent">

            <Button
                android:id="@+id/btn_fall"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginRight="15sp"
                android:drawableTop="@drawable/btn_fall"
                android:scaleType="centerInside"
                android:text=" 가을 "
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_winter"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginLeft="15sp"
                android:drawableTop="@drawable/btn_winter"
                android:scaleType="centerInside"
                android:text=" 겨울 "
                android:textColor="@color/white" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>