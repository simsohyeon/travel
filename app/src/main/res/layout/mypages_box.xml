            android:gravity="center_vertical"
            android:isIndicator="true"
            app:layout_constraintStart_toStartOf="@id/reviewTitleText3"
            app:layout_constraintTop_toBottomOf="@id/reviewTitleText3"
            tools:rating="4.5" />

        <TextView
            android:id="@+id/reviewText3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="16dp"
            android:drawablePadding="4dp"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/ratingBar3"
            app:layout_constraintTop_toBottomOf="@id/ratingBar3"
            tools:text="리뷰 내용" />

        <View
            android:layout_width="0dp"
