            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/reviewTitleText4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="16dp"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/reviewThumbnailImage4"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="리뷰 제목" />

        <RatingBar
            android:id="@+id/ratingBar4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:isIndicator="true"
            app:layout_constraintStart_toStartOf="@id/reviewTitleText4"
            app:layout_constraintTop_toBottomOf="@id/reviewTitleText4"
            tools:rating="5" />

        <TextView
            android:id="@+id/reviewText4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="16dp"
            android:drawablePadding="4dp"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/ratingBar4"
            app:layout_constraintTop_toBottomOf="@id/ratingBar4"
            tools:text="리뷰 내용" />

        <View
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_marginTop="16dp"
            android:background="#A8A8A8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/reviewText4" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
